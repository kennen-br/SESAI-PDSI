fieldset.projection-year
  legend
    strong = year

  .field
    label = "Quantidade estimada para #{year}"
    = f.number_field  :quantidade_estimada, class: 'structure-qty'

  .field
    label = "Valor unit√°rio estimado (R$ em #{year})"
    .currency-field
      = f.hidden_field  :valor_unitario
      = text_field_tag '', f.object.valor_unitario || 0, class: 'currency-input'

  == render 'pdsis/projecao_orcamentaria/form_budget_structures', f: f
