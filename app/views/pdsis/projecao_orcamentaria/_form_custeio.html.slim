                            = text_field_tag '', number_with_precision(eval("bf_child.object.revised_forecast_#{year}"), precision: 2) || 0, class: 'currency-input', disabled: true
                      = f.fields_for :budget_forecasts, @pdsi.bf_with_values_children(@pdsi.id, bf_child.object.cost.id) do |bf_child_s|
                        tr.structure data-index=("#{year}-#{bf_child_s.object.cost.parent_id}") id=("tr-#{year}-#{bf_child_s.object.cost.id}") style="display: none;"
                          td = bf_child_s.object.cost.name

                          td
